{
  "compilerOptions": {
    "baseUrl": "./",
    "isolatedModules": true,
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~/client": [
        "src/client/index.js"
      ],
      "@icons/*": [
        "node_modules/@material-symbols/svg-400/outlined/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
