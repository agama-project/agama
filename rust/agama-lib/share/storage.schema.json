      "enum": [
        "bcachefs",
        "btrfs",
        "exfat",
        "ext2",
        "ext3",
        "ext4",
        "f2fs",
        "jfs",
        "nfs",
        "nilfs2",
        "ntfs",
        "reiserfs",
        "swap",
        "tmpfs",
        "vfat",
        "xfs"
      ]
    },
    "filesystemTypeBtrfs": {
      "description": "Btrfs file system.",
      "type": "object",
      "additionalProperties": false,
      "required": ["btrfs"],
      "properties": {
        "btrfs": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "snapshots": {
              "description": "Whether to configrue Btrfs snapshots.",
              "type": "boolean"
            }
          }
        }
      }
    }
